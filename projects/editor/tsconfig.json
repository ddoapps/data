{
    "compilerOptions": {
        "lib": ["ES2023"],
        "module": "Node16",
        "target": "ES2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node16",

        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,

        "outDir": "dist"
    }
}
